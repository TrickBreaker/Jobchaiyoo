<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#E0F7FA">

        <ImageView
            android:id="@+id/company_image"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="1dp"
            android:text="Name"
            android:textColor="#009688"
            android:textSize="15sp"
            android:layout_alignTop="@+id/company_image"
            android:layout_alignEnd="@+id/subject_name" />

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Android"
            android:layout_below="@+id/company_name"
            android:layout_toEndOf="@+id/company_image"
            android:layout_marginStart="47dp" />


        <TextView

            android:id="@+id/qualification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:paddingBottom="1dp"
            android:text="2pm-3pm"
            android:layout_below="@+id/divider"
            android:layout_toEndOf="@+id/clock" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/subject_name"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0"
            android:layout_toEndOf="@+id/company_image" />

        <TextView
            android:id="@+id/date_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/qualification_text"
            android:layout_alignStart="@+id/qualification_text"
            android:layout_alignTop="@+id/textView8"
            android:paddingTop="1dp"
            android:text="Starting:"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/starting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/date_lable"
            android:layout_alignTop="@+id/date_lable"
            android:layout_toRightOf="@+id/date_lable"
            android:paddingTop="1dp"
            android:text="18th jan"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/qualification_text"
            android:layout_alignBottom="@+id/qualification_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="235dp"
            android:layout_marginRight="80dp"
            android:text="Type:"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/textView8"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignStart="@+id/type"
            android:layout_below="@+id/type"
            android:layout_marginTop="10dp"
            android:paddingBottom="2dp"
            android:textColor="#000000"
            card_view:srcCompat="@drawable/ic_action_location" />

        <ImageView
            android:id="@+id/clock"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/type"
            card_view:srcCompat="@drawable/ic_action_time"
            android:layout_alignStart="@+id/subject_name" />

        <TextView
            android:id="@+id/internship_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/type"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:text="intern" />

        <TextView
            android:id="@+id/internship_classs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="putalisadak"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/date_lable"
            android:layout_alignStart="@+id/clock"
            android:layout_alignTop="@+id/internship_classs"
            card_view:srcCompat="@drawable/ic_action_date" />


    </RelativeLayout>
</android.support.v7.widget.CardView>