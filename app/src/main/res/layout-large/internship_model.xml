<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="-8dp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:background="#FAFAFA">

        <ImageView
            android:id="@+id/company_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_for_intern" />

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/company_image"
            android:padding="1dp"
            android:textStyle="bold"
            android:text="Name"
            android:textColor="#009688"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/company_name"
            android:layout_below="@+id/company_name"
            android:padding="1dp"
            android:text="Android"
            android:textColor="#000000" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignStart="@+id/subject_name"
            android:layout_below="@+id/subject_name"
            android:background="#E0E0E0"
            android:layout_toStartOf="@+id/starting_date"
            android:layout_alignEnd="@+id/starting_date" />

        <ImageView

            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/company_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"
            card_view:srcCompat="@drawable/ic_action_time" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/subject_name"
            android:layout_alignTop="@+id/clock"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/clock"
            android:text="4pm-5pm"
            android:textColor="#FF1744"
             />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/clock"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/time"
            card_view:srcCompat="@android:drawable/ic_menu_my_calendar" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/time"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/imageView10"
            android:text="Starting:"
            android:textColor="#039BE5"
            />

        <TextView
            android:id="@+id/starting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"
            android:text="25th Jan"
            android:textColor="#039BE5"
             />


    </RelativeLayout>
</android.support.v7.widget.CardView>