<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ff6861"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#0097A7"
        android:text="Upload your cv"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/tv_file_name"
        android:layout_alignStart="@+id/buttonChoose" />

    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#0097A7"
        android:text="Select your cv"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/buttonUpload"
        android:layout_alignBottom="@+id/buttonUpload"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="173dp" />
    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>