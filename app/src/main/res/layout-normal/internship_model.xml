<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:foreground="?android:attr/selectableItemBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:background="#FAFAFA">

        <ImageView
            android:id="@+id/company_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/subject_name"
            android:layout_marginStart="12dp"
            android:adjustViewBounds="true"
            android:contentDescription="subject_image"
            android:src="@drawable/profile_for_intern" />

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/company_image"
            android:text="Android"
            android:textColor="#E65100"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/subject_name"
            android:layout_below="@+id/subject_name"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textColor="#3b4148"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/starting_date"
            android:layout_alignStart="@+id/company_name"
            android:layout_below="@+id/company_image"
            android:background="#E0E0E0" />

        <ImageView

            android:id="@+id/clock"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignEnd="@+id/company_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            card_view:srcCompat="@drawable/ic_action_time" />

        <TextView
            android:id="@+id/class_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/clock"
            android:layout_alignStart="@+id/company_name"
            android:text="4 pm-5 pm"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/date_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/class_time"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/class_time"
            android:text="Starting:"
            android:textColor="#039BE5" />

        <TextView
            android:id="@+id/starting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/date_lable"
            android:layout_toEndOf="@+id/date_lable"
            android:text="25th Jan"
            android:textSize="12sp" />

        <View style="@style/Divider" />


    </RelativeLayout>

</android.support.v7.widget.CardView>