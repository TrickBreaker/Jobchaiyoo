<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    android:layout_gravity="center_horizontal"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/company_image"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/banner" />

        <TextView

            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Understanding Android"
            android:textColor="#880e4f"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/date_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/address_text"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toStartOf="@+id/address_text"
            card_view:srcCompat="@drawable/ic_action_date" />


        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTxt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/location_image"
            android:text="Bcom"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/location_image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_below="@+id/nameTxt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            card_view:srcCompat="@drawable/ic_action_location" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/date_image"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/date_image"
            android:layout_toRightOf="@+id/date_image"
            android:text="Date"
            android:textColor="#2196F3"
            android:textSize="12sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>