<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/company_image"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/company_image"
            android:text="Name"
            android:textColor="#009688"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/company_name"
            android:layout_below="@+id/company_name"
            android:text="Android"
            android:textColor="#3b4148" />


        <TextView

            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="2pm-3pm"
            android:textColor="#ff6861" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/subject_name"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/date_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView7"
            android:layout_toEndOf="@+id/company_image"
            android:text="Starting:"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/starting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/date_lable"
            android:layout_toRightOf="@+id/date_lable"
            android:paddingTop="1dp"
            android:text="18th jan"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/time"
            android:layout_alignBottom="@+id/time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:text="Type:"
            android:textColor="#FF9900" />

        <ImageView

            android:id="@+id/textView8"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignStart="@+id/type"
            android:layout_below="@+id/type"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            card_view:srcCompat="@drawable/ic_action_location" />

        <ImageView
            android:id="@+id/clock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/type"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_toStartOf="@+id/date_lable"
            card_view:srcCompat="@drawable/ic_action_time" />

        <TextView
            android:id="@+id/internship_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/type"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/textView8"
            android:text="intern" />

        <TextView
            android:id="@+id/intern_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/textView8"
            android:text="putalisadak" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignStart="@+id/clock"
            android:layout_below="@+id/clock"
            android:layout_marginTop="10dp"
            card_view:srcCompat="@drawable/ic_action_date" />


    </RelativeLayout>
</android.support.v7.widget.CardView>