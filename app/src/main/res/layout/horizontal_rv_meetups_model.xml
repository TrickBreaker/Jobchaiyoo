<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="160dp"
    android:layout_height="210dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    android:layout_gravity="center_horizontal"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#f48fb1">

        <ImageView
            android:id="@+id/meetup_image"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/placeholder"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/meetup_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Designer"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/company_image"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/organizer_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="organizer:" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/organizer_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="codeframe Tech"
            android:layout_alignBaseline="@+id/organizer_lable"
            android:layout_alignBottom="@+id/organizer_lable"
            android:layout_toEndOf="@+id/organizer_lable"
            android:layout_marginStart="6dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>